    <script>
        // --- VOEG DIT TOE ONDERAAN JE SCRIPT TAG IN DE OPDRACHT FILE ---
        // Verander dit ID per opdracht (6 voor opdracht6)
        const ASSIGNMENT_ID = 6; 

        function saveResultToHost(score, totalVragen) {
            // 1. Haal bestaande progressie op
            let progress = JSON.parse(localStorage.getItem('studentProgress')) || {};
            
            // 2. Sla deze opdracht op
            progress[ASSIGNMENT_ID] = {
                completed: true,
                score: score,
                total: totalVragen,
                date: new Date().toISOString()
            };

            // 3. Schrijf terug naar geheugen
            localStorage.setItem('studentProgress', JSON.stringify(progress));
            
            // 4. Optioneel: Stuur een signaal naar de host pagina als die open staat
            window.dispatchEvent(new Event('storage'));
        }

        function checkAnswers() {
            const correctAnswers = {
                q1: { ans: "B", ref: "Suddenly, I woke up and shouted, 'Stop the car.'" },
                q2: { ans: "A", ref: "I thought I was alone, so I started singing very loudly." },
                q3: { ans: "C", ref: "...the weight was too much and I accidentally farted." },
                q4: { ans: "C", ref: "It sent good morning babe." }
            };

            let score = 0;
            const total = 4;

            for (let i = 1; i <= total; i++) {
                const qKey = 'q' + i;
                const fbBox = document.getElementById('fb-' + qKey);
                const selected = document.querySelector(`input[name="${qKey}"]:checked`);
                
                fbBox.style.display = "block";
                
                let isCorrect = selected && selected.value === correctAnswers[qKey].ans;
                if (isCorrect) score++;

                fbBox.innerHTML = `
                    <span style="color: ${isCorrect ? '#2e7d32' : '#c62828'}; font-weight: 600;">
                        ${isCorrect ? '‚úÖ Correct!' : '‚ùå Incorrect. The correct answer was ' + correctAnswers[qKey].ans}
                    </span>
                    <span class="timestamp-ref">Key moment: "${correctAnswers[qKey].ref}"</span>
                `;
            }

            const scoreDiv = document.getElementById('final-score');
            scoreDiv.style.display = "block";
            scoreDiv.innerHTML = `Well done! You got ${score} out of ${total} correct!`;
            
            // --- IMPLEMENTATIE OPSLAAN & NAVIGATIE ---
            
            // 1. Sla resultaat op
            saveResultToHost(score, total);

            // 2. Verberg de controleer knop
            document.getElementById("submit-btn").style.display = "none";

            // 3. Toon de navigatieknoppen
            const footerNav = document.getElementById("footer-nav");
            footerNav.style.display = "flex";

            // 4. Scroll naar beneden zodat de knoppen zichtbaar zijn
            setTimeout(() => {
                window.scrollTo({ top: document.body.scrollHeight, behavior: 'smooth' });
            }, 100);
        }
    </script>
