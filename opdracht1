    <script>
        // CONFIGURATIE
        const ASSIGNMENT_ID = 1; // Dit is Opdracht 1

        function saveResultToHost(score, totalVragen) {
            let progress = JSON.parse(localStorage.getItem('studentProgress')) || {};
            progress[ASSIGNMENT_ID] = {
                completed: true,
                score: score,
                total: totalVragen,
                date: new Date().toISOString()
            };
            localStorage.setItem('studentProgress', JSON.stringify(progress));
            window.dispatchEvent(new Event('storage'));
        }

        function checkAnswers() {
            const answers = {
                q1: { correct: "B", time: "0:32", text: "De luchtkwaliteit is sinds de jaren '60 niet meer zo slecht geweest." },
                q2: { correct: "B", time: "0:25", text: "Er zijn grote natuurbranden bezig in Canada." },
                q3: { correct: "C", time: "1:19 / 1:25", text: "Ze zijn Ghostbusters aan het filmen en doen een stunt sequence." },
                q4: { correct: "B", time: "2:17", text: "Het gevoel van vroeger in rokerige bars en nachtclubs." }
            };

            let score = 0;
            let total = 4;

            for (let i = 1; i <= total; i++) {
                const qName = "q" + i;
                const selected = document.querySelector(`input[name="${qName}"]:checked`);
                const resultDiv = document.getElementById("res-" + qName);
                
                let feedbackHTML = `<div class="correct-feedback">`;
                
                if (selected && selected.value === answers[qName].correct) {
                    score++;
                    feedbackHTML += `✅ Goed gedaan! `;
                } else {
                    feedbackHTML += `❌ Helaas. Het juiste antwoord was ${answers[qName].correct}. `;
                }

                feedbackHTML += `<br><span class="timestamp">Fragment: ${answers[qName].time} - "${answers[qName].text}"</span></div>`;
                resultDiv.innerHTML = feedbackHTML;
            }

            // Toon totaalscore
            const finalScoreDiv = document.getElementById("final-score");
            finalScoreDiv.style.display = "block";
            finalScoreDiv.innerHTML = `Je hebt ${score} van de ${total} vragen goed beantwoord!`;
            
            // Sla resultaat op
            saveResultToHost(score, total);

            // Verberg de controleer knop (optioneel, staat netter)
            document.getElementById("submit-btn").style.display = "none";

            // TOON DE NAVIGATIEKNOPPEN
            const footerNav = document.getElementById("footer-nav");
            footerNav.style.display = "flex";

            // Scroll naar beneden zodat de knoppen zichtbaar zijn
            setTimeout(() => {
                window.scrollTo({ top: document.body.scrollHeight, behavior: 'smooth' });
            }, 100);
        }
    </script>
